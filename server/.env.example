# Dubai Luxury Cars - Server Environment Variables
# Copy this file to .env and fill in your values

# Node environment: development, test, or production
NODE_ENV=development

# Server port
PORT=5000

# Client URL (for CORS and redirects)
CLIENT_URL=http://localhost:3000

# MongoDB connection string
# Format: mongodb://[username:password@]host[:port]/database
MONGODB_URI=mongodb://localhost:27017/luxury-car-rental

# JWT configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_NAME=Dubai Luxury Cars
FROM_EMAIL=noreply@dubailuxurycars.com

# Support contact information (shown in emails)
SUPPORT_EMAIL=support@dubailuxurycars.com
SUPPORT_PHONE=+971 4 123 4567

# Payment gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# MongoDB credentials (for Docker setup)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=password

# Optional: Redis configuration (if using session caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Optional: File upload limits
MAX_FILE_SIZE=5242880
MAX_FILES=5

# Optional: Logging level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info
